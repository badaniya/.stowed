{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "leader": "ctrl+x",
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "sidebar_toggle": "<leader>b",
    "status_view": "<leader>s",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_timeline": "<leader>g",
    "session_share": "none",
    "session_unshare": "none",
    "session_interrupt": "escape",
    "session_compact": "<leader>c",
    "session_child_cycle": "ctrl+right",
    "session_child_cycle_reverse": "ctrl+left",
    "messages_page_up": "ctrl+b,pageup",
    "messages_page_down": "ctrl+f,pagedown",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "ctrl+g,home",
    "messages_last": "ctrl+e,end",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "messages_toggle_conceal": "<leader>h",
    "model_list": "<leader>m",
    "model_cycle_recent": "f2",
    "model_cycle_recent_reverse": "shift+f2",
    "command_list": "ctrl+p",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter",
    "history_previous": "up",
    "history_next": "down"
  },
  "tools": {
    "bash": true,
    "edit": true,
    "read": true,
    "write": true,
    "grep": false,
    "glob": false,
    "list": false,
    "todoread": true,
    "todowrite": true,
    "webfetch": true
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-opus-4.6",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "github-copilot/claude-opus-4.6",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "mcphub*": false
      }
    },
    "thinking-beast-mode": {
      "disable": true
    },
    "ultimate-transparent-thinking-beast-mode": {
      "disable": true
    },
    "address-comments": {
      "disable": true
    },
    "atlassian-requirements-to-jira": {
      "disable": true
    },
    "blueprint-mode": {
      "disable": true
    },
    "code-reviewer": {
      "disable": true
    },
    "critical-thinking": {
      "disable": true
    },
    "debug": {
      "disable": true
    },
    "go-mcp-expert": {
      "disable": true
    },
    "mentor": {
      "disable": true
    },
    "strategic-plan": {
      "disable": true
    },
    "principal-software-engineer": {
      "disable": true
    },
    "prompt-builder": {
      "disable": true
    },
    "software-engineer-agent-v1": {
      "disable": true
    },
    "task-planner": {
      "disable": true
    },
    "tech-debt-remediation-plan": {
      "disable": true
    },
    "voidbeast-gpt41enhanced": {
      "disable": true
    }
  },
  "mcp": {
    "kubernetes": {
      // "description": "Kubernetes cluster management via kubernetes-mcp-server (deployed in mcp-services namespace)",
      "type": "remote",
      "url": "http://10.64.13.61/kubernetes-mcp/mcp",
      "enabled": false
    },
    "loki": {
      // "description": "Loki log querying and analysis"
      "type": "remote",
      "url": "http://10.64.13.61/loki-mcp/mcp",
      "enabled": false
    }
  },
  "plugin": [
    "oh-my-opencode@latest",
    "opencode-antigravity-auth@latest",
    "@ramtinj95/opencode-tokenscope@latest",
    //"@tarquinen/opencode-dcp@latest"
  ],
  "provider": {
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        }
      }
    }
  }
}
