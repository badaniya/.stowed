{
  "mcpServers": {
    "jira-remote-mcp": {
      "url": "https://ws1-jira-mcp.qa.xcloudiq.com/mcp",
      "type": "http",
      "headers": {"x-jira-pat": "${input:jira-pat-token}"},
      "tools": ["*"]
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "jira-pat-token",
      "description": "Enter your JIRA Personal Access Token",
      "password": true
    }
  ]
}
